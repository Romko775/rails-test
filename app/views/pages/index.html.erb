<h1>All posts</h1>
<% if @posts.any? %>
    <% @posts.each do |post| %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h3><%= post.title %></h3>
                <p><%= post.description %></p>
                <%= link_to "Read mode", post_path(post), :class => 'btn btn-primary' %>
            </div>
        </div>
    <% end %>
<% else %>
    <div>No posts found</div>
<% end %>