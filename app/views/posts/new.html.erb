<h2>New post adding</h2>
<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <%= @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>Post name <br> <%= f.text_field(:title, {:class => 'form-control'}) %></p>
    <p>Post description <br> <%= f.text_area(:description, {:class => 'form-control'}) %></p>
    <p><%= f.submit({:class => 'btn btn-success'})%></p>
<% end %>