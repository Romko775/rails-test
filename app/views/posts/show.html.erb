<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-warning' %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Do you want to delete this post?'}, :class => 'btn btn-danger' %>
<hr>
<h1><%= @post.title %></h1>
<p><%= @post.description %></p>
<hr>
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
    <div>
        <strong><%= comment.username %></strong>
        <p><%= comment.body %></p>
    </div>
<% end %>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>User name <br> <%= f.text_field(:username, {:class => 'form-control'}) %></p>
    <p>Comment <br> <%= f.text_area(:body, {:class => 'form-control'}) %></p>
    <p><%= f.submit('Add comment', {:class => 'btn btn-success'})%></p>
<% end %>